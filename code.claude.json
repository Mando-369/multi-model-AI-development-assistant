{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "@claude/mcp-filesystem",
                "--path",
                "."
            ]
        },
        "faust-analyzer": {
            "type": "sse",
            "url": "http://127.0.0.1:8765/sse"
        },
        "chromadb": {
            "command": "python",
            "args": [
                "mcp_chromadb_server.py"
            ]
        },
        "ollama": {
            "command": "python",
            "args": [
                "mcp_ollama_server.py"
            ]
        }
    }
}